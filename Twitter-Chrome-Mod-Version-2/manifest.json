{
  "manifest_version": 2,

  "name": "Twitter Shield",
  "description": "Displays toxicity score for users",
  "version": "3.0",
  "web_accessible_resources": ["*.png","*.PNG"],
  "content_scripts": [
    {
      "matches": ["http://www.twitter.com/*",
                  "https://twitter.com/*","http://localhost:8000/"],
      "js": ["js/content.js", "js/popup.js"],
       "css": ["css/content.css"],
      "run_at": "document_end"
    }
  ],
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "*://*.twitter.com/*",
    "https://*.herokuapp.com/"
  ],

  "background": {
    "page" : "background.html"
  },
  "content_security_policy": "script-src 'self' https://cm.g.doubleclick.net https://ssl.google-analytics.com; object-src 'self'"
}

{
  "manifest_version": 2,

  "name": "Stranger Danger",
  "description": "Improving social signals on Twitter",
  "version": "3.0",
  "web_accessible_resources": ["img/icon.png"],
  "content_scripts": [
    {
      "matches": ["http://www.twitter.com/*",
                  "https://twitter.com/*","http://localhost:8000/"],
      "js": ["js/jquery-min.js", "js/jquery-ui.min.js", "js/arrive.min.js", "js/oauth.min.js", "js/content.js", "js/popup.js"],
       "css": ["css/bootstrap.min.css", "css/bootstrap-theme.min.css", "css/jquery-ui.css","css/content.css"],
      "run_at": "document_start"
    }
  ],
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "*://*/*", 
    "activeTab",
    "storage",
    "tabs",
    "*://*.twitter.com/*",
    "*://oauth.io/*",
    "https://*.herokuapp.com/"

  ],

  "background": {
    "page" : "background.html"
  },
  "content_security_policy": "script-src 'self' https://*.twimg.com https://cm.g.doubleclick.net https://stats.g.doubleclick.net https://www.google.com/ads https://oauth.io https://ssl.google-analytics.com; object-src *; image-src * https://stats.g.doubleclick.net https://www.google.com/ads; data: *"
}
